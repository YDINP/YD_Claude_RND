{
  "name": "arcane-collectors",
  "version": "1.0.0",
  "description": "Subculture-style idle collection RPG web game",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "node tests/e2e/browser-test.mjs",
    "test:e2e:headed": "node tests/e2e/browser-test.mjs --headed",
    "validate:data": "node scripts/validate-data.js",
    "prebuild": "npm run validate:data"
  },
  "keywords": [
    "game",
    "phaser",
    "gacha",
    "idle",
    "rpg"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.95.3",
    "ajv": "^8.17.1",
    "pexels": "^1.4.0",
    "phaser": "^3.80.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "playwright": "^1.58.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^5.4.0",
    "vitest": "^4.0.18"
  }
}
