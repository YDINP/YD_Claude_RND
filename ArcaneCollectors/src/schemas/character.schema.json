{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "character.schema.json",
  "title": "Character Schema",
  "description": "Schema for characters.json validation",
  "type": "object",
  "required": ["characters"],
  "properties": {
    "characters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "rarity", "cult", "class", "mood", "stats", "growthStats", "skills"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^hero_\\d{3}$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "nameEn": {
            "type": "string"
          },
          "rarity": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "cult": {
            "type": "string",
            "enum": ["olympus", "valhalla", "asgard", "avalon", "takamagahara", "kunlun", "yomi", "helheim", "tartarus"]
          },
          "class": {
            "type": "string",
            "enum": ["warrior", "mage", "archer", "healer", "assassin", "tank"]
          },
          "mood": {
            "type": "string",
            "enum": ["brave", "fierce", "wild", "calm", "stoic", "devoted", "cunning", "noble", "mystic"]
          },
          "description": {
            "type": "string"
          },
          "quote": {
            "type": "string"
          },
          "stats": {
            "type": "object",
            "required": ["hp", "atk", "def", "spd"],
            "properties": {
              "hp": { "type": "number", "minimum": 0 },
              "atk": { "type": "number", "minimum": 0 },
              "def": { "type": "number", "minimum": 0 },
              "spd": { "type": "number", "minimum": 0 }
            },
            "additionalProperties": false
          },
          "growthStats": {
            "type": "object",
            "required": ["hp", "atk", "def", "spd"],
            "properties": {
              "hp": { "type": "number", "minimum": 0 },
              "atk": { "type": "number", "minimum": 0 },
              "def": { "type": "number", "minimum": 0 },
              "spd": { "type": "number", "minimum": 0 }
            },
            "additionalProperties": false
          },
          "skills": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["id", "name", "description", "multiplier"],
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" },
                "description": { "type": "string" },
                "multiplier": { "type": "number", "minimum": 0 },
                "gaugeGain": { "type": "number", "minimum": 0 },
                "gaugeCost": { "type": "number", "minimum": 0 },
                "target": { "type": "string", "enum": ["single", "all", "self", "random", "random_3", "single_ally", "all_allies"] }
              }
            }
          },
          "design": {
            "type": "object"
          }
        },
        "additionalProperties": true
      }
    }
  }
}
